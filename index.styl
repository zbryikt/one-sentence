@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  margin: 20px

#title
  font-size: 3em
  text-align: center
  margin: 20px

.events
  display: flex
  flex-wrap: wrap
  margin-bottom: 40px

.event
  flex(1 1 auto)
  text-aign: center
  margin: 5px
  display: inline-block
  padding: 1px 10px
  border-radius: 3px
  border: 1px solid #999
  background: #eee
  color: #222
  font-size: 1.2em

.head
  text-align: center
  border-bottom: 1px dashed #999
  padding: 5px
  max-width: 50%
  margin: 20px auto 10px

.posts
  margin-bottom: 40px

.post
  padding: 40px 25px 25px
  position: relative
  border-radius: 5px
  border: 1px solid #999
  background: #eee
  margin: 25px 0
  font-size: 1.6em
  white-space: pre-wrap

.board
  position: absolute
  display: inline-block
  top: -8px
  left: 10px
  font-size: 0.8em
  color: #fff
  background: #777
  border: 1px solid #444
  padding: 4px 10px
  border-radius: 5px

.link
  position: absolute
  top: -10px
  padding: 1px 10px
  background: #fff
  border-radius: 5px
  border: 1px solid #999
  right: 10px

#thumbnail
  border-radius: 10px
  box-shadow: 0 1px 2px rgba(0,0,0,0.4)

#fb-like
  position: fixed
  top: 0
  right: 10px
  background: #f00
  padding: 10px
  border-radius: 0 0 10px 10px
  border: 1px solid #999
  box-shadow: 0 1px 2px rgba(0,0,0,0.1)
  border-top: 0
  background: #eee
